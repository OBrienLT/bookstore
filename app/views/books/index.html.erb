<h1>Books</h1>
<p>Available as of <%= formatted_time(@available_at) %></p>
<%= page_entries_info @books %>
<ol>
<% @books.each do |book| %>
	<li><i><%= link_to(book.title, book) %></i> by <%= book.author %><br />
		<%= format_average_stars(book) %>
		<% if book.reviews.any? %>
			(out of <% pluralize(book.reviews.size, 'review') %>)
		<% end %>
	</li>
<% end %>
</ol><br />
<%= paginate @books %>